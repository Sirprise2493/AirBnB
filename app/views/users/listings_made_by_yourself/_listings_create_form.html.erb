<div class="listing-create-section">
  <div class="w-35 mx-auto">
    <div class="card shadow-sm border-0">
      <div class="card-body p-4">
        <h5 class="card-title mb-3">Create a listing</h5>
        <p class="text-muted mb-4">Please fill out all required fields.</p>

        <%= simple_form_for(@listing, html: { multipart: true, class: "needs-validation" }) do |f| %>
          <div class="row g-3">
            <div class="col-12">
              <%= f.input :title,
                label: "Title",
                required: true,
                input_html: { class: "form-control" } %>
            </div>

            <div class="col-12">
              <%= f.input :address,
                label: "Address",
                required: true,
                input_html: { class: "form-control", placeholder: "Street, number, city" } %>
            </div>

            <div class="col-6">
              <%= f.input :max_guests,
                as: :integer,
                label: "Max. Guests",
                required: true,
                input_html: { class: "form-control", min: 1 } %>
            </div>

            <div class="col-6">
              <label class="form-label">Price per night</label>
              <div class="input-group">
                <span class="input-group-text">â‚¬</span>
                <%= f.input_field :price_per_night,
                  as: :decimal,
                  class: "form-control",
                  required: true,
                  step: 0.01,
                  min: 0,
                  placeholder: "0.00" %>
                <span class="input-group-text">/ night</span>
              </div>
              <%= f.error :price_per_night, class: "invalid-feedback d-block" %>
            </div>

            <!-- Photos: dashed box im gleichen Stil wie die Summary im Booking-Form -->
            <div class="col-12">
              <div class="photos-box p-3 rounded-3">
                <div class="small text-muted mb-2">Upload multiple photos (JPG/PNG)</div>
                <%= f.input_field :photos,
                  as: :file,
                  class: "form-control bg-white",
                  multiple: true,
                  direct_upload: true %>
              </div>
              <%= f.error :photos, class: "invalid-feedback d-block" %>
            </div>

            <div class="col-12">
              <%= f.input :description,
                as: :text,
                label: "Description",
                required: true,
                input_html: { class: "form-control", rows: 4, placeholder: "Describe your listing..." } %>
            </div>

            <div class="col-12 d-grid">
              <%= f.button :submit, "Create listing", class: "btn btn-primary btn-lg" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
